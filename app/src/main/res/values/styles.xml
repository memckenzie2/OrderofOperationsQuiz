<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginBottom">24dp</item>
        <item name="android:layout_marginTop">@dimen/question_vertical_margin</item>
        <item name="android:textColor">@color/colorLightText</item>
        <item name="android:textSize">@dimen/font_size_large</item>
        <item name="android:fontFamily">@font/geostar_regular</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">4dp</item>
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>

    <style name="question_view">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">@dimen/question_horizontal_margin</item>
        <item name="android:layout_marginLeft">@dimen/question_horizontal_margin</item>
        <item name="android:layout_marginBottom">@dimen/question_vertical_margin</item>
        <item name="android:layout_marginTop">@dimen/question_vertical_margin</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/spacemono_bold</item>
        <item name="android:textSize">@dimen/font_size_medium</item>

    </style>

    <style name="radio_view">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">@dimen/question_horizontal_margin</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginBottom">@dimen/question_vertical_margin</item>
        <item name="android:layout_marginTop">@dimen/question_vertical_margin</item>
        <item name="android:fontFamily">@font/spacemono_regular</item>
        <item name="android:textSize">@dimen/font_size_small</item>
    </style>

    <style name="edit_text_view">
        <item name="android:layout_marginRight">@dimen/question_horizontal_margin</item>
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:layout_marginBottom">@dimen/question_vertical_margin</item>
        <item name="android:layout_marginTop">@dimen/question_vertical_margin</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">@dimen/edit_text_width</item>
        <item name="android:background">@color/accentTransparent</item>
        <item name="android:fontFamily">@font/spacemono_regular</item>
    </style>

    <style name="answer_view">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">@dimen/question_horizontal_margin</item>
        <item name="android:layout_marginLeft">@dimen/question_horizontal_margin</item>
        <item name="android:layout_marginBottom">@dimen/question_vertical_margin</item>
        <item name="android:layout_marginTop">@dimen/question_vertical_margin</item>
        <item name="android:fontFamily">@font/spacemono_regular</item>
        <item name="android:textSize">@dimen/font_size_small</item>
    </style>

    <style name="button">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_margin">@dimen/button_margin</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">@color/colorLightText</item>
        <item name="android:textSize">@dimen/font_size_small</item>
        <item name="android:fontFamily">@font/spacemono_bold</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="horizontal_line">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/line_height</item>
        <item name="android:background">@color/colorAccent</item>
        <item name="android:layout_margin">@dimen/line_margin</item>
    </style>

</resources>
